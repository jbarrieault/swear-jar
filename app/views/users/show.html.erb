This is a user page!


<h1><%= @user.name %></h1>

<%= image_tag @user.image_url, class: "profile_image" %>

<h2>Violations!</h2>

<ul>
  <% @user.violations.each do |violation| %>
    <li><%= violation.tweet.content %></li>
  <% end %>
</ul>

<h2>Groups</h2>
<ul>
  <% @user.groups.each do |group| %>
    <li><%= link_to "#{group.name}", group %></li>
  <% end %>
</ul>

<p>
  <%= link_to "Join a group", groups_join_path %><br>
  <%= link_to "Create a group", new_group_path %>
</p>

<% if current_user.venmo_id %>
  You have authorized Venmo 
<% else %>
  <%= link_to 'Authorize Venmo', venmo_login_path %>
<% end %>