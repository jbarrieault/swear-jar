<div class="col-sm-6 col-sm-offset-3">
  <div class="custom-panel">
    <div class="custom-panel-border"></div>
    <div class="custom-panel-content">

    <h1>Edit <%= @group.name %></h1>

    <%= form_tag group_path, :method => "PATCH" do %>  

      <div class="form-group">
        <%= label_tag "name" %>
        <%= text_field_tag "name", @group.name, class: "form-control" %>
      </div>
      
      <div class="form-group">
        <%= label_tag "purpose" %>
        <%= text_field_tag "purpose", @group.purpose, class: "form-control"  %>
      </div>
      
      <div class="form-group text-center venmo-btn">
        <%= submit_tag "Edit group", class: "btn btn-success btn-lg" %>
      </div>

    <% end %>
  </div>
</div>